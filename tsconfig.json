/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": [
      "ES2022",
      "dom"
    ],
    "baseUrl": "./src",
    "paths": {
      "@services/*": ["services/*"],
      "@admin/*": ["services/modulos/administracion/*"],
      "@contabilidad/*": ["services/modulos/contabilidad/*"],
      "@inventario/*": ["services/modulos/inventario/*"],
      "@ventas/*": ["services/modulos/ventas/*"],
      "@rrhh/*": ["services/modulos/rrhh/*"],
      "@produccion/*": ["services/modulos/produccion/*"],
      "@distribucion/*": ["services/modulos/distribucion/*"],
      "@logistica/*": ["services/modulos/logistica/*"],
      "@envios/*": ["services/modulos/envios/*"],
      "@compras/*": ["services/modulos/compras/*"],
      "@facturacion/*": ["services/modulos/facturacion/*"],
      "@env/*": ["environment/*"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
